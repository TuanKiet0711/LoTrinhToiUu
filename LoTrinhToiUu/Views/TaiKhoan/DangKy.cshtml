@model CityTourApp.Models.NguoiDung
@{
    ViewData["Title"] = "Đăng ký";
}

<style>
    .auth-bg {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: url('/images/travel-bg.jpg') center/cover no-repeat;
        transform: translateY(-8%);
    }

    .auth-card-lg {
        width: 460px;
        border-radius: 20px;
        backdrop-filter: blur(12px);
        background: rgba(255,255,255,0.9);
    }

    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden;
    }
</style>

<div class="auth-bg">
    <div class="card shadow-lg border-0 auth-card-lg">
        <div class="card-body p-4">
            <h2 class="text-center mb-4 text-success fw-bold">✈️ Đăng ký tài khoản</h2>

            @if (ViewBag.DangKyLoi != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.DangKyLoi</div>
            }

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <form asp-action="DangKy" method="post" novalidate>
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="HoTen" class="form-label fw-semibold">Họ và tên</label>
                    <input asp-for="HoTen" class="form-control rounded-pill" placeholder="Nhập họ tên..." />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="SoDienThoai" class="form-label fw-semibold">Số điện thoại</label>
                    <input asp-for="SoDienThoai"
                           class="form-control rounded-pill"
                           placeholder="Nhập số điện thoại 10 số..."
                           maxlength="10"
                           inputmode="numeric"
                           pattern="^\d{10}$" />
                    <span class="form-text">Chỉ 10 chữ số (0-9).</span>
                    <span asp-validation-for="SoDienThoai" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">Email</label>
                    <input asp-for="Email"
                           type="email"
                           class="form-control rounded-pill"
                           placeholder="ví dụ: ten@domain.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Mật khẩu + Nhập lại mật khẩu cùng hàng -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="MatKhau" class="form-label fw-semibold">Mật khẩu</label>
                        <input asp-for="MatKhau"
                               type="password"
                               class="form-control rounded-pill"
                               placeholder="Nhập mật khẩu..." />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Nhập lại mật khẩu</label>
                        <input type="password" name="nhaplaiMatKhau"
                               class="form-control rounded-pill"
                               placeholder="Nhập lại mật khẩu..." />
                        <span class="text-danger">@Html.ValidationMessage("NhapLaiMatKhau")</span>
                    </div>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success rounded-pill fw-bold shadow">Đăng ký</button>
                </div>
            </form>

            <p class="text-center mt-3">
                Đã có tài khoản?
                <a asp-action="DangNhap" class="fw-bold text-decoration-none text-primary">Đăng nhập ngay</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Chặn ký tự không phải số ở SĐT (hỗ trợ UX)
        const sdt = document.querySelector('input[name="SoDienThoai"]');
        if (sdt) {
            sdt.addEventListener('input', () => {
                sdt.value = sdt.value.replace(/\D/g, '').slice(0, 10);
            });
        }
    </script>
}
