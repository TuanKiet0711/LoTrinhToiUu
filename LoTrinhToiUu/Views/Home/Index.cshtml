@{
    ViewData["Title"] = "Trang chủ";
}
<!-- Hero section -->
<div class="hero-banner text-white d-flex align-items-center justify-content-center">
    <div class="text-center">
        <h1 class="display-3 fw-bold">Lộ trình tham quan 🗺️</h1>
        <p class="lead mb-4">
            Ứng dụng hỗ trợ tìm <b>lộ trình tối ưu</b> cho xe du lịch đến các danh thắng.
        </p>
        <a asp-controller="Attractions" asp-action="Index" class="btn btn-lg btn-app btn-primary shadow">
            🚐 Mở bản đồ
        </a>
    </div>
</div>

<!-- Cards giới thiệu -->
<div class="container mt-5 pt-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">✨ Lộ trình thông minh</h5>
                    <p class="card-text text-muted">
                        Tính toán tuyến đường nhanh chóng, phù hợp xe 12–45 chỗ.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mt-4 mt-md-0">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body text-center">
                    <h5 class="card-title fw-bold">🏞️ Danh thắng</h5>
                    <p class="card-text text-muted">
                        Khám phá các địa điểm tham quan nổi bật được hiển thị trực quan trên bản đồ.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bài báo tiêu biểu -->
    <div class="container mt-5 pt-4">
        <h2 class="text-center fw-bold mb-4">📰 Bài báo tiêu biểu</h2>

        <div id="newsCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">

                <!-- Slide 1 -->
                <div class="carousel-item active">
                    <div class="row justify-content-center">
                        <div class="col-md-4">
                            <div class="card shadow-sm border-0 rounded-4 h-100">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold">Du lịch Việt Nam bùng nổ 2025</h5>
                                    <p class="card-text text-muted flex-grow-1">
                                        Những điểm đến hot nhất trong năm 2025 thu hút đông đảo khách du lịch quốc tế.
                                    </p>
                                    <a href="https://tcdulichtphcm.vn/chuyen-hay/vi-sao-tp-hcm-duoc-binh-chon-la-diem-den-xu-huong-hang-dau-the-gioi-nam-2025-c17a91653.html" target="_blank"
                                       class="btn btn-outline-primary mt-2">Đọc tiếp</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card shadow-sm border-0 rounded-4 h-100">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold">Khám phá danh thắng miền Trung</h5>
                                    <p class="card-text text-muted flex-grow-1">
                                        Hành trình qua Huế, Đà Nẵng, Hội An cùng những trải nghiệm văn hóa độc đáo.
                                    </p>
                                    <a href="https://mytour.vn/vi/blog/bai-viet/kham-pha-mien-trung-hue-da-nang-hoi-an-chuyen-hanh-trinh-doc-dao.html" target="_blank"
                                       class="btn btn-outline-primary mt-2">Đọc tiếp</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card shadow-sm border-0 rounded-4 h-100">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold">Xu hướng du lịch xanh</h5>
                                    <p class="card-text text-muted flex-grow-1">
                                        Ngày càng nhiều du khách lựa chọn mô hình du lịch bền vững và thân thiện môi trường.
                                    </p>
                                    <a href="https://vov.vn/du-lich/tu-van/du-lich-ben-vung-tai-viet-nam-con-gap-nhieu-rao-can-post1109456.vov" target="_blank"
                                       class="btn btn-outline-primary mt-2">Đọc tiếp</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Slide 2 -->
                <div class="carousel-item">
                    <div class="row justify-content-center">
                        <div class="col-md-4">
                            <div class="card shadow-sm border-0 rounded-4 h-100">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold">Ẩm thực đường phố Hà Nội</h5>
                                    <p class="card-text text-muted flex-grow-1">
                                        Khám phá những món ăn đặc trưng làm say lòng du khách thủ đô.
                                    </p>
                                    <a href="https://xaydungso.vn/blog/tham-khao-thu-ha-noi-an-gi-de-chuan-bi-cho-mua-thu-se-lanh-vi-cb.html" target="_blank"
                                       class="btn btn-outline-primary mt-2">Đọc tiếp</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card shadow-sm border-0 rounded-4 h-100">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold">Đà Lạt – Thành phố ngàn hoa</h5>
                                    <p class="card-text text-muted flex-grow-1">
                                        Trải nghiệm không khí mát lạnh, rừng thông và các vườn hoa rực rỡ.
                                    </p>
                                    <a href="https://vinhtour.vn/du-lich-da-lat-kham-pha-thanh-pho-ngan-hoa/" target="_blank"
                                       class="btn btn-outline-primary mt-2">Đọc tiếp</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card shadow-sm border-0 rounded-4 h-100">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold">Biển Phú Quốc hấp dẫn du khách</h5>
                                    <p class="card-text text-muted flex-grow-1">
                                        Đảo ngọc với bãi biển đẹp, hải sản tươi ngon và nhiều khu nghỉ dưỡng sang trọng.
                                    </p>
                                    <a href="https://viettelmoney.vn/kham-pha-dao-ngoc-phu-quoc-thien-duong-nghi-duong-tai-phuong-nam" target="_blank"
                                       class="btn btn-outline-primary mt-2">Đọc tiếp</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Slide 3 -->
                <div class="carousel-item">
                    <div class="row justify-content-center">
                        <div class="col-md-4">
                            <div class="card shadow-sm border-0 rounded-4 h-100">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold">Khám phá hang Sơn Đoòng</h5>
                                    <p class="card-text text-muted flex-grow-1">
                                        Một trong những hang động lớn nhất thế giới với hệ sinh thái độc đáo.
                                    </p>
                                    <a href="https://oxalisadventure.com/vi/tour/tham-hiem-son-doong-4n3d/" target="_blank"
                                       class="btn btn-outline-primary mt-2">Đọc tiếp</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card shadow-sm border-0 rounded-4 h-100">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold">Sài Gòn về đêm</h5>
                                    <p class="card-text text-muted flex-grow-1">
                                        Thành phố không ngủ với nhịp sống sôi động, quán bar, và ẩm thực đêm phong phú.
                                    </p>
                                    <a href="https://vinwonders.com/vi/wonderpedia/news/sai-gon-ve-dem-26-dia-diem-an-choi-hap-dan/" target="_blank"
                                       class="btn btn-outline-primary mt-2">Đọc tiếp</a>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card shadow-sm border-0 rounded-4 h-100">
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fw-bold">Miền Tây sông nước</h5>
                                    <p class="card-text text-muted flex-grow-1">
                                        Khám phá chợ nổi, vườn trái cây và những trải nghiệm du lịch đặc trưng miền Tây.
                                    </p>
                                    <a href="https://tourcangio.com.vn/tour-mien-tay-1-ngay/" target="_blank"
                                       class="btn btn-outline-primary mt-2">Đọc tiếp</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Nút điều hướng -->
            <button class="carousel-control-prev" type="button" data-bs-target="#newsCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
                <span class="visually-hidden">Trước</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#newsCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon bg-dark rounded-circle p-2" aria-hidden="true"></span>
                <span class="visually-hidden">Sau</span>
            </button>
        </div>
    </div>




  
</div>

@section Head {
    <style>

        /* Hero banner */
        .hero-banner {
            height: 70vh;
            background: url("https://images.unsplash.com/photo-1507525428034-b723cf961d3e?auto=format&fit=crop&w=1500&q=80") center/cover no-repeat;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 6px 24px rgba(0,0,0,.2);
            margin-top: 70px; /* để tránh bị che bởi navbar fixed-top */
        }

            .hero-banner h1, .hero-banner p {
                text-shadow: 0 3px 8px rgba(0,0,0,.5);
            }

        /* Làm chậm hiệu ứng trượt ngang */
        .carousel-item {
            transition: transform 1s ease-in-out, opacity 1s ease-in-out !important;
        }

    </style>
}
