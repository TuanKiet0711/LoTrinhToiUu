@{
    var title = ViewData["Title"] as string ?? "LoTrinhToiUu";
    var fullBleed = (ViewData["FullBleed"] as bool?) ?? false;

    // Lấy thông tin từ Session
    var userEmail = Context.Session.GetString("NguoiDungEmail");
    var userName = Context.Session.GetString("NguoiDungHoTen");
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Lộ Trình Tối Ưu</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LoTrinhToiUu.styles.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet" />

    <style>
        :root {
            --bg1: #f0f9ff;
            --bg2: #ffffff;
            --ink: #0f172a;
            /* Ocean blue palette */
            --ocean-700: #0369a1;
            --ocean-600: #0284c7;
            --ocean-500: #0ea5e9;
            --ocean-400: #38bdf8;
            --accent: var(--ocean-500);
            --headerH: 64px;
            --footerH: 64px;
            scrollbar-gutter: stable both-edges;
        }

        html, body {
            height: 100%;
        }

        body {
            margin: 0;
            font-family: "Poppins", system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
            color: var(--ink);
            background: linear-gradient(180deg, var(--bg1) 0%, var(--bg2) 45%);
            display: flex;
            flex-direction: column;
            min-height: 100svh;
        }

        /* HEADER */
        .navbar-ocean {
            background: linear-gradient(90deg, var(--ocean-600), var(--ocean-500)) !important;
            box-shadow: 0 6px 24px rgba(2, 6, 23, .15);
        }

            .navbar-ocean .navbar-brand,
            .navbar-ocean .nav-link {
                color: #fff !important;
                font-weight: 500;
            }

                .navbar-ocean .nav-link:hover,
                .navbar-ocean .nav-link.active {
                    text-decoration: underline;
                    text-underline-offset: 4px;
                }

        /* Nội dung chính */
        body > .full-bleed-wrapper,
        body > .container.my-4 {
            flex: 1 0 auto;
            width: 100%;
        }

        /* FOOTER */
        footer.footer {
            background: linear-gradient(90deg, var(--ocean-600), var(--ocean-500));
            color: white;
            text-align: center;
            padding: 1rem 0;
            font-size: .95rem;
            box-shadow: 0 -4px 12px rgba(0, 0, 0, .08);
            margin-top: auto;
        }

            footer.footer a {
                color: #fff;
                text-decoration: underline;
            }

                footer.footer a:hover {
                    color: var(--ocean-400);
                }

        /* Responsive nav toggle */
        .navbar-toggler {
            border-color: rgba(255, 255, 255, 0.5);
        }

        .navbar-toggler-icon {
            filter: invert(1);
        }
    </style>

    @RenderSection("Head", required: false)
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-ocean" style="height:var(--headerH)">
            <div class="container">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Lộ Trình Tối Ưu 🗺️</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNav"
                        aria-controls="topNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="topNav" class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Attractions" asp-action="Index">Bản đồ</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">Giới thiệu</a></li>

                        @if (string.IsNullOrEmpty(userEmail))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="TaiKhoan" asp-action="DangNhap">Đăng nhập</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="TaiKhoan" asp-action="DangKy">Đăng ký</a></li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <span class="nav-link">Xin chào, @userName</span>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="TaiKhoan" asp-action="DangXuat" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link text-white">Đăng xuất</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @if (fullBleed)
    {
        <div class="full-bleed-wrapper">
            <main role="main" class="full-bleed-main">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <div class="container my-4">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

   

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
